<%- include('../../partials/headAndNav', {pageName: "Shows" , user:user }) %>
    <h3 class="bekind">Be kind, Unwind</h3>

    <% for(let i=0; i < media.length; i++) { %>
        <div class="col">
            <a href=/home/tv/<%=media[i]._id %> class="atag">
                <p>
                    <%= media[i].name %>
                </p>
                <div id="poster">
                    <img id="one" src=<%=media[i].img %> alt="Show Selection">
                </div>
            </a>
            <div class="hide" id="desc">
                <%= media[i].description %>
            </div>
        </div>
        <% } %>